{
  "ConnectionStrings": {
    "IdentityDb": "Server=localhost;Database=ExpenseFlow_Identity;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "JwtSettings": {
    "SecretKey": "REPLACE_WITH_A_MINIMUM_32_CHARACTER_SECRET_KEY_IN_PRODUCTION",
    "Issuer": "ExpenseFlow.Identity",
    "Audience": "ExpenseFlow.Clients",
    "AccessTokenExpiryMinutes": 15,
    "RefreshTokenExpiryDays": 7
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "AllowedHosts": "*"
}
